package br.com.starwar.util;


import java.time.LocalDateTime;
import java.time.format.DateTimeFormatter;

import org.springframework.stereotype.Component;

@Component
public class DateUtil {

	
	public String formatLocalDateTimeToDatabaseStyle(LocalDateTime local){
		return DateTimeFormatter.ofPattern("yyyy-MM-dd HH:mm:ss").format(local);
	}
}
